                        </div>
                    </div>
                    <div class="show-info Paypal"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    __api__.getPageIdentification();
    //显示身份证号码
    $('div.identify').on('click',function (e) {
       if(e.target.id === 'showCertification') {
           e.target.innerText = e.target.innerText === '隐藏信息' ? '查看完整信息' : '隐藏信息';
           $('.certificateNum').each(function () {
               $(this).hasClass('sy-hidden')
                ? $(this).removeClass('sy-hidden')
                : $(this).addClass('sy-hidden');
           });
       }
    });
    //取消保存
    $('button[data-sy-cancel]').on('click', function () {
        var _this = $(this),
            formEl = _this.parents('.add-form'),
            targerEl = formEl.find('input,select,textarea');
        _this.next().removeAttr('data-u-id');
        targerEl.each(function () {
            if(!$(this).attr('disabled')){
                $(this).val('');
            }
        });
        if(formEl.next('.show-info').children().length > 0){
            formEl.addClass('sy-hidden');
        }
    });
    //收缩、展示内容
    $('i.toggle').on('click', function () {
        var _this = $(this),
            outDiv = _this.parents('.identify-item'),
            targetDiv = outDiv.find('.identify-cnt');
        if(_this.hasClass('am-icon-angle-down')){
            targetDiv.addClass('sy-hidden');
            _this.addClass('am-icon-angle-up').removeClass('am-icon-angle-down');
        }else{
            targetDiv.removeClass('sy-hidden');
            _this.addClass('am-icon-angle-down').removeClass('am-icon-angle-up');
        }
    });
</script>