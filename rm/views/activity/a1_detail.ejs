<script>
    (function ($) {

        //tab显示详情
        var refStep = __bundle__.getQueryString('step');
        var stepBtn = $('a.a1_step');
        stepBtn.on('click', function (){
            var currStep = $(this).attr('data-step');
            $(this).addClass('active').siblings().removeClass('active');
            $('div.a1_step.'+ currStep).addClass('active').siblings().removeClass('active');
        });
        if(refStep){
            $('a.a1_step.'+ refStep).addClass('active').siblings().removeClass('active');
            $('div.a1_step.'+ refStep).addClass('active').siblings().removeClass('active');
        }
        //去注册
        $('.goRegister').click(function (e) {
            e.preventDefault()
            if(!__api__.isAuth){
                location.href = '/register';
                return null
            }
            if(__api__.isAuth.isPassIdentity || __api__.isAuth.isPassSkill){
                setTimeout(() => {
                    location.href = '/personal/skill';
                }, 1000);
                return null
            }
            if(__api__.isAuth.isPassIdentity && __api__.isAuth.isPassSkill){
                setTimeout(() => {
                    location.href = '/personal';
                }, 1000);
                return null
            }
        })
        //去抢单
        $('.goOrder').click(function (e) {
            e.preventDefault()
            if(!__api__.isAuth){
                setTimeout(() => {
                    location.href = '/register';
                }, 1000);
                return null
            }
            //未通过身份验证
            if(!__api__.isAuth.isPassIdentity){
                $.warning('你当前还不能接单，快去完善信息吧');
                setTimeout(() => {
                    location.href = '/personal/identification';
                }, 1000);
                return null;
            }
            //已通过身份验证，未通过技能验证
            if(!__api__.isAuth.isPassSkill){
                $.warning('你当前还不能接单，快去完善信息吧');
                setTimeout(() => {
                    location.href = '/personal/skill';
                }, 1000);
                return null;
            }
            location.href = '/order'; //接单
        })

        //初始化大转盘
        var lottery = new LotteryDial(document.getElementById('js_pointer'), { // eslint-disable-line
            speed: 15, // 每帧速度
            areaNumber: 8 // 奖区数量
        })

        //开始抽奖
        __api__.joinWheel(lottery);

        new PCAS("deliverprovince", "delivercity", "deliverarea");

    }(jQuery))
</script>